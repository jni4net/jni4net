<jni4net-proxygen xmlns="http://jni4net.sf.net/0.8.6.0/toolConfig.xsd">
  <!-- Location where .java files will be generated into. It's relative or absolute path. -->
  <TargetDirJvm>java</TargetDirJvm>
  <!-- Location where .cs files will be generated into. It's relative or absolute path. -->
  <TargetDirClr>csharp</TargetDirClr>

  <!-- List of class paths (.jar files or directories) which define known classes for generator-->
  <ClassPath Path="lib/fop.jar"/>
  <ClassPath Path="lib/xmlgraphics-commons-1.3.1.jar"/>
  <ClassPath Path="lib/avalon-framework-4.2.0.jar"/>
  <ClassPath Path="lib/batik-all-1.7.jar"/>
  <ClassPath Path="lib/commons-io-1.3.1.jar"/>
  <ClassPath Path="lib/serializer-2.7.0.jar"/>
  <ClassPath Path="lib/xalan-2.7.0.jar"/>
  <ClassPath Path="lib/xercesImpl-2.7.1.jar"/>
  <ClassPath Path="lib/xml-apis-1.3.04.jar"/>
  <ClassPath Path="lib/commons-logging-1.0.4.jar"/>

  <!-- List of Java classes which should have proxy generated -->
  <JavaClass TypeName="org.apache.fop.apps.Fop"/>
  <JavaClass TypeName="org.apache.fop.apps.MimeConstants"/>
  <JavaClass TypeName="org.apache.fop.apps.FopFactory"/>
  <JavaClass TypeName="javax.xml.transform.TransformerException"/>
  <JavaClass TypeName="javax.xml.transform.TransformerFactory"/>
  <JavaClass TypeName="javax.xml.transform.Transformer"/>
  <JavaClass TypeName="javax.xml.transform.Source"/>
  <JavaClass TypeName="javax.xml.transform.Result"/>
  <JavaClass TypeName="javax.xml.transform.sax.SAXResult"/>
  <JavaClass TypeName="javax.xml.transform.stream.StreamSource"/>
  <JavaClass TypeName="java.io.BufferedOutputStream"/>
  <JavaClass TypeName="java.io.FileOutputStream"/>

</jni4net-proxygen>