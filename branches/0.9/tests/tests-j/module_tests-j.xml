<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tests-j" default="compile.module.tests-j">
  <dirname property="module.tests-j.basedir" file="${ant.file.module_tests-j}"/>
  
  <property name="module.jdk.home.tests-j" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tests-j" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tests-j" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tests-j" value="${compiler.args}"/>
  
  <property name="tests-j.output.dir" value="${module.tests-j.basedir}/bin/classes"/>
  <property name="tests-j.testoutput.dir" value="${module.tests-j.basedir}/bin/testclasses"/>
  
  <path id="tests-j.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tests-j.module.production.classpath">
    <path refid="${module.jdk.classpath.tests-j}"/>
    <pathelement location="${dummy-j.output.dir}"/>
    <pathelement location="${dummy-j-j4n.output.dir}"/>
    <pathelement location="${dummy-n-j4n.output.dir}"/>
    <pathelement location="${jni4net.output.dir}"/>
    <pathelement location="${jre-micro-j4n.output.dir}"/>
    <pathelement location="${mscorlib-micro-j4n.output.dir}"/>
    <pathelement location="${basedir}/_lib/junit-4.10.jar"/>
  </path>
  
  <path id="tests-j.runtime.production.module.classpath">
    <pathelement location="${tests-j.output.dir}"/>
    <path refid="dummy-j.runtime.production.module.classpath"/>
    <path refid="dummy-j-j4n.runtime.production.module.classpath"/>
    <path refid="dummy-n-j4n.runtime.production.module.classpath"/>
    <path refid="jni4net.runtime.production.module.classpath"/>
    <path refid="jre-micro-j4n.runtime.production.module.classpath"/>
    <path refid="mscorlib-micro-j4n.runtime.production.module.classpath"/>
    <pathelement location="${basedir}/_lib/junit-4.10.jar"/>
  </path>
  
  <path id="tests-j.module.classpath">
    <path refid="${module.jdk.classpath.tests-j}"/>
    <pathelement location="${tests-j.output.dir}"/>
    <pathelement location="${dummy-j.testoutput.dir}"/>
    <pathelement location="${dummy-j.output.dir}"/>
    <pathelement location="${dummy-j-j4n.testoutput.dir}"/>
    <pathelement location="${dummy-j-j4n.output.dir}"/>
    <pathelement location="${dummy-n-j4n.testoutput.dir}"/>
    <pathelement location="${dummy-n-j4n.output.dir}"/>
    <pathelement location="${jni4net.testoutput.dir}"/>
    <pathelement location="${jni4net.output.dir}"/>
    <pathelement location="${jre-micro-j4n.testoutput.dir}"/>
    <pathelement location="${jre-micro-j4n.output.dir}"/>
    <pathelement location="${mscorlib-micro-j4n.testoutput.dir}"/>
    <pathelement location="${mscorlib-micro-j4n.output.dir}"/>
    <pathelement location="${basedir}/_lib/junit-4.10.jar"/>
  </path>
  
  <path id="tests-j.runtime.module.classpath">
    <pathelement location="${tests-j.testoutput.dir}"/>
    <pathelement location="${tests-j.output.dir}"/>
    <path refid="dummy-j.runtime.module.classpath"/>
    <path refid="dummy-j-j4n.runtime.module.classpath"/>
    <path refid="dummy-n-j4n.runtime.module.classpath"/>
    <path refid="jni4net.runtime.module.classpath"/>
    <path refid="jre-micro-j4n.runtime.module.classpath"/>
    <path refid="mscorlib-micro-j4n.runtime.module.classpath"/>
    <pathelement location="${basedir}/_lib/junit-4.10.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.tests-j">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tests-j">
    <patternset refid="excluded.from.module.tests-j"/>
  </patternset>
  
  <path id="tests-j.module.sourcepath">
    <dirset dir="${module.tests-j.basedir}/../../tests">
      <include name="tests-j"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tests-j" depends="compile.module.tests-j.production,compile.module.tests-j.tests" description="Compile module tests-j"/>
  
  <target name="compile.module.tests-j.production" depends="compile.module.dummy-j,compile.module.dummy-j-j4n,compile.module.dummy-n-j4n,compile.module.jni4net,compile.module.jre-micro-j4n,compile.module.mscorlib-micro-j4n" description="Compile module tests-j; production classes">
    <mkdir dir="${tests-j.output.dir}"/>
    <javac destdir="${tests-j.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tests-j}/javac">
      <compilerarg line="${compiler.args.tests-j}"/>
      <bootclasspath refid="tests-j.module.bootclasspath"/>
      <classpath refid="tests-j.module.production.classpath"/>
      <src refid="tests-j.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tests-j"/>
    </javac>
    
    <copy todir="${tests-j.output.dir}">
      <fileset dir="${module.tests-j.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tests-j.tests" depends="compile.module.tests-j.production" description="compile module tests-j; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tests-j" description="cleanup module">
    <delete dir="${tests-j.output.dir}"/>
    <delete dir="${tests-j.testoutput.dir}"/>
  </target>
</project>